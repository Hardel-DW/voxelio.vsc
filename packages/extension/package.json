{
    "name": "minode",
    "displayName": "Datapack Node Editor - Mi-node",
    "description": "Integration of the Misode editor into VSC, with Spyglass tools.",
    "icon": "resources/icon.png",
    "version": "0.7.0",
    "publisher": "voxel",
    "repository": {
        "type": "git",
        "url": "https://github.com/Hardel-DW/voxelio.vsc"
    },
    "license": "MIT",
    "engines": {
        "vscode": "^1.96.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [],
    "main": "./dist/extension.cjs",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "minode",
                    "title": "Mi-Node",
                    "icon": "$(json)"
                }
            ]
        },
        "views": {
            "minode": [
                {
                    "icon": "resources/icon.png",
                    "type": "webview",
                    "id": "minode.nodeEditor",
                    "name": "Node Editor"
                }
            ]
        },
        "commands": [
            {
                "command": "minode.openEditor",
                "title": "Open Node Editor",
                "category": "Mi-Node"
            }
        ],
        "configuration": {
            "title": "Mi-Node",
            "properties": {
                "minode.uiScale": {
                    "type": "number",
                    "default": 1,
                    "minimum": 1,
                    "maximum": 20,
                    "description": "UI scale factor for the node editor (1-20)"
                },
                "minode.largeFileThreshold": {
                    "type": "number",
                    "default": 1000,
                    "minimum": 0,
                    "maximum": 50000,
                    "description": "Line count threshold above which all nodes are collapsed by default for performance"
                },
                "minode.colors.primary": {
                    "type": "string",
                    "default": "#1b1b1b",
                    "pattern": "^#[0-9a-fA-F]{6}$",
                    "description": "Primary background color (dark)"
                },
                "minode.colors.text": {
                    "type": "string",
                    "default": "#dadada",
                    "pattern": "^#[0-9a-fA-F]{6}$",
                    "description": "Text color (light)"
                },
                "minode.colors.add": {
                    "type": "string",
                    "default": "#487c13",
                    "pattern": "^#[0-9a-fA-F]{6}$",
                    "description": "Color for add buttons (green)"
                },
                "minode.colors.remove": {
                    "type": "string",
                    "default": "#9b341b",
                    "pattern": "^#[0-9a-fA-F]{6}$",
                    "description": "Color for remove buttons (red)"
                },
                "minode.colors.selected": {
                    "type": "string",
                    "default": "#7f5505",
                    "pattern": "^#[0-9a-fA-F]{6}$",
                    "description": "Color for selected state (gold)"
                },
                "minode.colors.warning": {
                    "type": "string",
                    "default": "#cca700",
                    "pattern": "^#[0-9a-fA-F]{6}$",
                    "description": "Color for warnings (yellow)"
                },
                "minode.colors.error": {
                    "type": "string",
                    "default": "#f48771",
                    "pattern": "^#[0-9a-fA-F]{6}$",
                    "description": "Color for errors (red/orange)"
                },
                "minode.colors.predicate": {
                    "type": "string",
                    "default": "#306163",
                    "pattern": "^#[0-9a-fA-F]{6}$",
                    "description": "Color for predicate category (teal)"
                },
                "minode.colors.function": {
                    "type": "string",
                    "default": "#5f5f5f",
                    "pattern": "^#[0-9a-fA-F]{6}$",
                    "description": "Color for function category (gray)"
                },
                "minode.colors.pool": {
                    "type": "string",
                    "default": "#386330",
                    "pattern": "^#[0-9a-fA-F]{6}$",
                    "description": "Color for pool category (dark green)"
                }
            }
        }
    },
    "scripts": {
        "build": "tsdown",
        "dev": "tsdown --watch",
        "lint": "tsgo --noEmit",
        "biome:check": "biome check ./src",
        "biome:format": "biome format --write ./src",
        "biome:unsafefix": "biome check --write --unsafe ./src"
    },
    "devDependencies": {
        "@types/vscode": "^1.96.0",
        "tsdown": "0.17.0-beta.4"
    }
}