{
    "name": "minode",
    "displayName": "Datapack Node Editor - Mi-node",
    "description": "Integration of the Misode editor into VSC, with Spyglass tools.",
    "icon": "resources/icon.png",
    "version": "0.5.0",
    "publisher": "voxel",
    "repository": {
        "type": "git",
        "url": "https://github.com/Hardel-DW/voxelio.vsc"
    },
    "license": "MIT",
    "engines": {
        "vscode": "^1.96.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [],
    "main": "./dist/extension.cjs",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "minode",
                    "title": "Mi-Node",
                    "icon": "$(json)"
                }
            ]
        },
        "views": {
            "minode": [
                {
                    "icon": "resources/icon.png",
                    "type": "webview",
                    "id": "minode.nodeEditor",
                    "name": "Node Editor"
                }
            ]
        },
        "commands": [
            {
                "command": "minode.openEditor",
                "title": "Open Node Editor",
                "category": "Mi-Node"
            }
        ],
        "configuration": {
            "title": "Mi-Node",
            "properties": {
                "minode.uiScale": {
                    "type": "number",
                    "default": 1,
                    "minimum": 1,
                    "maximum": 20,
                    "description": "UI scale factor for the node editor (1-20)"
                },
                "minode.accentColor": {
                    "type": "string",
                    "default": "#4a9f4a",
                    "pattern": "^#[0-9a-fA-F]{6}$",
                    "description": "Primary accent color in hex format (e.g., #4a9f4a). Variants are auto-calculated using oklch."
                }
            }
        }
    },
    "scripts": {
        "build": "tsdown",
        "dev": "tsdown --watch",
        "lint": "tsgo --noEmit",
        "biome:check": "biome check ./src",
        "biome:format": "biome format --write ./src",
        "biome:unsafefix": "biome check --write --unsafe ./src"
    },
    "devDependencies": {
        "@types/vscode": "^1.96.0",
        "tsdown": "0.17.0-beta.4"
    }
}